<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body text-center">
      <h1 class="mb-3">
        <img src="/secure-icon.png" alt="icon" width="20%" />
      </h1>
      <h2>Login</h2>

      <% if (typeof messages !== 'undefined' && messages && messages.length > 0) { %>
        <% messages.forEach(function(msg){ %>
          <div class="alert alert-danger mt-2"><%= msg %></div>
        <% }); %>
      <% } %>

      <a class="btn btn-dark mt-3 mb-3" href="/auth/github">
        <i class="fab fa-github"></i> Login with GitHub
      </a>

      <form action="/auth/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
            required
          />
        </div>

        <div class="form-group mt-3">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
            required
          />
        </div>

        <button type="submit" class="btn btn-primary btn-block mt-3">
          Login
        </button>
      </form>

      <p class="mt-4">New User? <a href="/auth/register">Register</a></p>
      <p>Forgot Password? <a href="/auth/forgot">Reset</a></p>
    </div>
  </div>
</div>
